<h1>New Keyword</h1>

<%= form_with model: @keyword do |f| %>
  <% if @keyword.errors.any? %>
    <ul>
      <% @keyword.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>

  <div>
    <%= f.label :title %>
    <%= f.text_field :title, autofocus: true %>
  </div>

  <div>
    <%= f.label :exeption %>
    <%= f.text_field :exeption, autofocus: false %>
  </div>

  <%= f.submit "Create" %>
<% end %>

<%= link_to "Back", keywords_path %>