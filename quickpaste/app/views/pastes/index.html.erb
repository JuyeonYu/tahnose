<h1>pastes</h1>
<p><%= link_to "new paste", new_paste_path %></p>

<%= form_with url: pastes_path, method: :get, local: true do |form| %>
  <div>
    <%= form.label :q, "검색" %>
    <%= form.search_field :q, value: @query, placeholder: "태그 또는 본문" %>
    <%= form.submit "검색" %>
  </div>
<% end %>

<% @pastes.each do |paste| %>
  <div>
    <%= link_to paste do %>
      [<%= paste.tag %>] <%= time_ago_in_words(paste.created_at) %> ago
    <% end %>
  </div>
<% end %>

<% if @pagy.pages > 1 %>
  <% window_size = 5 %>
  <% start_page = [@pagy.page - (window_size / 2), 1].max %>
  <% end_page = [start_page + window_size - 1, @pagy.last].min %>
  <% start_page = [end_page - window_size + 1, 1].max %>

  <nav class="pagination">
    <%= link_to "이전", url_for(page: @pagy.previous, q: @query.presence), class: "page-link", aria: { disabled: @pagy.previous.nil? } if @pagy.previous %>

    <% (start_page..end_page).each do |page| %>
      <% if page == @pagy.page %>
        <span class="page-link current"><%= page %></span>
      <% else %>
        <%= link_to page, url_for(page: page, q: @query.presence), class: "page-link" %>
      <% end %>
    <% end %>

    <%= link_to "다음", url_for(page: @pagy.next, q: @query.presence), class: "page-link", aria: { disabled: @pagy.next.nil? } if @pagy.next %>
  </nav>
<% end %>
