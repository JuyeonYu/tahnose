<h1>Pastes#index</h1>
<p><%= link_to "new paste", new_paste_path %></p>

<% @pastes.each do |paste| %>
  <div>
    <%= paste.id %>

    <%= link_to paste.index_display_content, paste %>
  </div>
<% end %>

<% if @pagy.pages > 1 %>
  <% window_size = 5 %>
  <% start_page = [@pagy.page - (window_size / 2), 1].max %>
  <% end_page = [start_page + window_size - 1, @pagy.last].min %>
  <% start_page = [end_page - window_size + 1, 1].max %>

  <nav class="pagination">
    <%= link_to "이전", url_for(page: @pagy.previous), class: "page-link", aria: { disabled: @pagy.previous.nil? } if @pagy.previous %>

    <% (start_page..end_page).each do |page| %>
      <% if page == @pagy.page %>
        <span class="page-link current"><%= page %></span>
      <% else %>
        <%= link_to page, url_for(page: page), class: "page-link" %>
      <% end %>
    <% end %>

    <%= link_to "다음", url_for(page: @pagy.next), class: "page-link", aria: { disabled: @pagy.next.nil? } if @pagy.next %>
  </nav>
<% end %>
