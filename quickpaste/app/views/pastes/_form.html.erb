
<%= form_with model: paste do |f| %>
  <% if paste.errors.any? %>
    <div>
      <h3><%= paste.errors.count %> errors</h3>
      <ul>
        <% paste.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= f.label :content %><br>
    <%= f.text_area :content, rows: 10 %>
  </div>

  <div>
    <%= f.label :expires_at, "만료 시각(선택)" %><br>
    <%= f.datetime_local_field :expires_at %>
  </div>

  <div>
    <%= f.check_box :read_once %>
    <%= f.label :read_once, "한 번만 읽기" %>
  </div>

  <div>
    <%= f.submit %>
  </div>
<% end %>