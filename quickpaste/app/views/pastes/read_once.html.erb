<h1>
  <span class="paste-read-once">⏱️</span>
  <%= @paste.tag %> · <%= l(@paste.created_at.in_time_zone) %>
</h1>

<hr>

<div class="read-once-warning">
  <%= t("pastes.show.read_once_warning") %>
</div>

<div class="read-once-actions">
  <%= button_to t("pastes.show.confirm_read_once"), confirm_read_once_paste_path(@paste), method: :post, class: "login-button", form: { class: "logout-form" } %>
</div>

<p class="read-once-list">
  <%= link_to t("pastes.show.list"), pastes_path, class: "login-button" %>
</p>
