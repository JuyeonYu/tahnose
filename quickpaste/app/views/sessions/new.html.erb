<div class="session">
  <h1>로그인</h1>

  <%= form_with url: login_path, method: :post, local: true do |form| %>
    <div class="field">
      <%= form.label :email, "이메일" %>
      <%= form.email_field :email, required: true, autocomplete: "email" %>
    </div>

    <div class="actions">
      <%= form.submit "로그인 링크 받기" %>
    </div>
  <% end %>
</div>
